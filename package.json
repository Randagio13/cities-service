{
  "name": "@ac-dev/cities-service",
  "author": "Alessandro Casazza",
  "version": "0.0.0",
  "description": "Get the World's cities",
  "repository": "https://github.com/Randagio13/cities-service.git",
  "license": "MIT",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "world",
    "countries",
    "states",
    "regions",
    "cities"
  ],
  "files": [
    "lib",
    "package.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "alias": "npx tsc-alias",
    "start": "tsc --watch",
    "build": "tsc -b tsconfig.json --verbose --force && cp -R data lib",
    "postbuild": "minimize-js lib && npm run minify-json",
    "minify-json": "minify-json ./lib/data -w -s",
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release",
    "publish:beta": ""
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "addReleases": "top"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "lib",
      "limit": "5 MB",
      "webpack": false
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^9.0.0",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/jest": "^27.4.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "minify-json": "^1.0.0",
    "minimize-js": "^1.2.0",
    "semantic-release": "^19.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
